<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fashion Selector</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
            height: 100vh;
            margin: 0;
            background-color: #f0f0f0;
            overflow-y: scroll;
        }
        .container101 {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            width: 100%;
            max-width: 1200px;
            padding: 20px;
        }
        .item101 {
            background-color: white;
            border-radius: 8px;
            padding: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
            flex: 1 1 200px;
            max-width: 220px;
            min-width: 150px;
            box-sizing: border-box;
            transition: transform 0.3s;
        }
        .item101:hover {
            transform: scale(1.04);
        }
        .item101 img {
            width: 100%;
            height: 200px;
            object-fit: cover;
            margin-bottom: 10px;
            border-radius: 5px;
            transition: opacity 0.1s;
        }
        .buttons101 {
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .arrow {
            font-size: 18px;
            cursor: pointer;
            transition: color 0.3s;
        }
        .arrow:hover {
            color: #0056b3;
        }
        .action-buttons {
            margin-top: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 10px;
        }
        .action-button {
            padding: 10px 15px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        .action-button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    
    <div class="container101">
        <% Object.keys(wardrobeItems).forEach(category => { %>
            <% if (category !== 'perfume') { %>
                <div class="item101" id="<%= category %>">
                    <h2><%= category.charAt(0).toUpperCase() + category.slice(1) %></h2>
                    <img src="" alt="<%= category %> Image" id="<%= category %>-img">
                    <div class="buttons101">
                        <i class="fas fa-arrow-left arrow" onclick="changeImage('<%= category %>', -1)"></i>
                        <i class="fas fa-arrow-right arrow" onclick="changeImage('<%= category %>', 1)"></i>
                    </div>
                </div>
            <% } %>
        <% }); %>
    </div>

    <div class="action-buttons">
        <button class="action-button" onclick="saveOutfit()">Save Outfit</button>
        <button class="action-button" onclick="rateOutfit()">Rate This Outfit</button>
        <button class="action-button" onclick="shareOutfit()">Share This Outfit with Community</button>
    </div>

    <script>
        const wardrobeItems = <%- JSON.stringify(wardrobeItems) %>;
        const currentIndex = {
            shirts: 0,
            pants: 0,
            belts: 0,
            shoes: 0,
            watches: 0
        };

        function changeImage(category, direction) {
            const images = wardrobeItems[category];
            currentIndex[category] = (currentIndex[category] + direction + images.length) % images.length;
            const img = document.querySelector(`#${category}-img`);
            img.style.opacity = '0';
            setTimeout(() => {
                img.src = images[currentIndex[category]].link;
                img.style.opacity = '1';
            }, 300);
        }

        for (const category in wardrobeItems) {
            changeImage(category, 0);
        }

        let touchstartX = 0;
        let touchendX = 0;

        function checkSwipe() {
            if (touchendX < touchstartX) {
                for (const category in wardrobeItems) {
                    changeImage(category, 1);
                }
            }
            if (touchendX > touchstartX) {
                for (const category in wardrobeItems) {
                    changeImage(category, -1);
                }
            }
        }

        document.addEventListener('touchstart', (event) => {
            touchstartX = event.changedTouches[0].screenX;
        });

        document.addEventListener('touchend', (event) => {
            touchendX = event.changedTouches[0].screenX;
            checkSwipe();
        });

        function saveOutfit() {
            alert('Outfit saved!');
        }

        function rateOutfit() {
            const rating = (Math.random() * (5 - 4) + 4).toFixed(1);
            alert(`You rated this outfit: ${rating} stars!`);
        }

        function shareOutfit() {
            alert('Outfit shared with the community!');
        }
    </script>
</body>
</html>
